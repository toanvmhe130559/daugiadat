                                <div class="modal-subheader text-center">
                                    Đăng nhập để xem thông tin và quản lý các phiên đấu giá của bạn
                                </div>
                                <form asp-controller="Authentication" asp-action="Login" method="post">
                                    <input placeholder="Nhập email" asp-for="Email"
                                           class="form-control space-top email-login" name="email" required>
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                    <input type="password" placeholder="Nhập mật khẩu" class="form-control space-top email-login"
                                           name="password" required asp-for="Password">
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    <button class="btn btn-primary modal-login-btn space-top log-in-memory continue-btn"
                                            style="background-color: #43c4eb;color: black;" type="submit">
                                        Đăng nhập
                                    </button>
                                </form>
                                <div class="social-separator">
                                    <div class="social-line"></div>
                                    <span>Hoặc</span>
                                    <div class="social-line"></div>
                                </div>
                                <div class="clearfix space-bottom text-center space-top-30">
                                    <span class="dark-gray-text">Bạn không có tài khoản?</span>
                                    <a href="/login/" id="signUpBtn" class="create-acct-link">Đăng ký</a>
                                </div>
                                <div class="clearfix space-bottom text-center" style="font-size: 12px;">
                                    <span class="dark-gray-text">
                                        By continuing with Google, you agree to Invaluable's <a href="/agreements/userTerms.cfm" target="_blank">terms of service</a> and <a href="/agreements/privacy.cfm" target="_blank">privacy policy</a>.
                                        Invaluable may send you communications; you can set your preferences in your
                                        account.
                                    </span>
                                </div>
                            </div>
                        </div>

                        <!--Register modal-->
                        <button class="btn btn-default hidden-xs notranslate create-acct-link" id="signUpLink">
                            Đăng ký
                        </button>
                        <div id="signupModal" class="modal">
                            <div class="modal-content">
                                <span class="close">&times;</span>
                                <div class="modal-title modal-title-text text-center">Tạo tài khoản</div>
                                <div class="modal-subheader text-center">
                                    Đăng ký để trở thành thành viên và tham gia các phiên đấu giá
                                </div>
                                <input type="email" placeholder="Enter email address"
                                       class="form-control space-top email-login" name="email">
                                <input type="password" placeholder="Password" class="form-control space-top email-login"
                                       name="pwd">
                                <button class="btn btn-primary modal-login-btn space-top log-in-memory continue-btn">Đăng ký</button>
                                <div class="clearfix space-bottom text-center space-top-30">
                                    <span class="dark-gray-text">Bạn đã có tài khoản?</span>
                                    <a href="/login/" id="logInBtn" class="create-acct-link">Đăng nhập</a>
                                </div>
                                <div class="clearfix space-bottom text-center" style="font-size: 12px;">
